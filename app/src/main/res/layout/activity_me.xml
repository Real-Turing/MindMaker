<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F3F3F3"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:id="@+id/l_name"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        >
        <ImageView
            android:id="@+id/user_head"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:src="@drawable/girl"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/username"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:text="思享"
                />
            <TextView
                android:id="@+id/uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="12dp"
                android:text="ID:20191001111"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="关注：125"
                    android:textColor="#B1AFAF"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="10dp"
                    android:textColor="#B1AFAF"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:padding="5dp"
                    android:paddingStart="5dp"
                    android:textSize="10sp"
                    android:text="粉丝：1.5K"
                    android:textColor="#B1AFAF"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:src="@drawable/more_arrow"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="30dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3A3A3A"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textview_1"
                android:text="笔记数\n\n23"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textview_1"
                android:text="收藏数\n\n23"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textview_1"
                android:text="点赞\n\n23"
                />
            <Button
                android:id="@+id/look"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:text="浏览\n\n23"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3A3A3A"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:id="@+id/data_layout"
                >
                <Button
                    android:text="我的数据"
                    android:textSize="13sp"
                    android:id="@+id/my_data_btn"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingStart="50dp"
                    android:stateListAnimator="@null"
                    android:background="@drawable/button"
                    />
            </LinearLayout>
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/data"
                />
            <ImageView
                android:id="@+id/my_data_more"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/more_arrow"
                android:layout_marginTop="0dp"
                android:layout_alignRight="@+id/data_layout"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:id="@+id/collect_layout"
                >
                <Button
                    android:id="@+id/my_collection_fold_btn"
                    android:text="我的收藏"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingStart="50dp"
                    android:stateListAnimator="@null"
                    android:background="@drawable/button"
                    />
            </LinearLayout>
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_collection"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/more_arrow"
                android:layout_marginTop="0dp"
                android:layout_alignRight="@+id/collect_layout"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:id="@+id/mode_layout"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:gravity="center_vertical"
                    android:paddingStart="50dp"
                    android:stateListAnimator="@null"
                    android:text="夜间模式"
                    android:textSize="13sp" />
            </LinearLayout>
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/moonlight"
                />
            <Switch
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignRight="@+id/mode_layout"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="18dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:id="@+id/setting_layout"
                >
                <Button
                    android:text="设置"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingStart="50dp"
                    android:stateListAnimator="@null"
                    android:background="@drawable/button"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/set"
                android:layout_marginStart="10dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/more_arrow"
                android:layout_marginTop="0dp"
                android:layout_alignRight="@+id/setting_layout"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#AAA8A8"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="#F9F8F5F5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/record"
                    android:src="@drawable/record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:src="@drawable/find"
                    android:id="@+id/find"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:src="@drawable/me_clicked"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                >
                <TextView
                    android:text="记录"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    />
                <TextView
                    android:text="发现"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    />
                <TextView
                    android:text="我的"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/teal_700"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>