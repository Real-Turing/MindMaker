<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_layout"
    android:background="@drawable/bg_passage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/passage_layout"
        android:fitsSystemWindows="true"
        >
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                />
            <EditText
                android:id="@+id/mEditText"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:textSize="0sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="编辑笔记"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/save_note"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/save"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:padding="14dp"
                android:foreground="?selectableItemBackground"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"

            >
            <EditText
                android:id="@+id/note_title"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:hint="标题"
                android:textSize="30sp"
                android:gravity="center"
                />
            <LinearLayout
                android:id="@+id/type_note"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="未分类"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/invite_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:visibility="gone"
                >
                <EditText
                    android:id="@+id/invite_id"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:hint="输入UID"
                    />
                <Button
                    android:id="@+id/invite_btn"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="邀请"
                    android:textSize="12sp"
                    android:background="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/note_new_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_bottom"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/count"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1045字"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2022.05.10.12:23"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:layout_marginEnd="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/location"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="8sp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>