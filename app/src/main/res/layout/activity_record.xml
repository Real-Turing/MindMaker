<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fafafa"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@drawable/gradual_change"
        android:visibility="gone"
        >

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/gradual_change"
        >
        <Button
            android:foreground="?selectableItemBackground"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:id="@+id/button_note"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#0000"
            android:text="笔记"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Button
            android:foreground="?selectableItemBackground"
            android:id="@+id/button_todo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#0000"
            android:text="待办"
            android:textSize="20dp"
            android:textStyle="normal"
            android:padding="0dp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageButton
            android:foreground="?selectableItemBackground"
            android:id="@+id/search"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search"
            android:layout_marginEnd="10dp"/>

        <Spinner
            android:foreground="?selectableItemBackground"
            android:id="@+id/spinner_menu"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/more"
            android:spinnerMode="dropdown"
            android:entries="@array/option"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/refresh_layout"
        >
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_note_todo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerView_1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="484dp"-->
<!--        />-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#AAA8A8"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#F9F8F5F5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            >
            <ImageView
                android:src="@drawable/record_clicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:src="@drawable/find"
                android:id="@+id/find"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/me"
                android:src="@drawable/me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            >
            <TextView
                android:text="记录"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/teal_700"
                android:textSize="10sp"
                />
            <TextView
                android:text="发现"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                />
            <TextView
                android:text="我的"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>