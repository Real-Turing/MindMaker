<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f9f9f9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/gradual_change"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_margin="10dp"
            >
            <Button

                android:foreground="?selectableItemBackground"
                android:id="@+id/tab_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_weight="1"
                android:text="关注"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/tab_recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_weight="1"
                android:text="推荐"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:foreground="?selectableItemBackground"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#f9f9f9"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/gradual_change"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:background="@drawable/round_edittext"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:hint="      请输入要搜索的内容"
                    />
                <ImageView
                    android:src="@drawable/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="190dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/search"
                    android:src="@drawable/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="80dp"
                    android:visibility="visible"
                    android:foreground="?selectableItemBackground"
                    />
                <ImageView
                    android:src="@drawable/add_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="120dp"
                    android:visibility="visible"
                    android:foreground="?selectableItemBackground"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#797979"
        tools:ignore="Suspicious0dp" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        android:id="@+id/refresh_layout"
        >
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/id_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        android:background="#c59bd4"
        >
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/id_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#AAA8A8"
        tools:ignore="Suspicious0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#F9F8F5F5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/record"
                android:src="@drawable/record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:src="@drawable/find_clicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:src="@drawable/me"
                android:id="@+id/me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            >
            <TextView
                android:text="记录"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                />
            <TextView
                android:text="发现"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/teal_700"
                android:textSize="10sp"
                />
            <TextView
                android:text="我的"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>